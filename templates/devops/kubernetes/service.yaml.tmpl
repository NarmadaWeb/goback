apiVersion: v1
kind: Service
metadata:
  name: {{.ProjectName}}-service
  labels:
    app: {{.ProjectName}}
spec:
  type: ClusterIP
  ports:
  - port: 80
    targetPort: 8080
    protocol: TCP
    name: http
  selector:
    app: {{.ProjectName}}
---
apiVersion: v1
kind: Service
metadata:
  name: {{.ProjectName}}-nodeport
  labels:
    app: {{.ProjectName}}
spec:
  type: NodePort
  ports:
  - port: 80
    targetPort: 8080
    protocol: TCP
    name: http
    nodePort: 30080
  selector:
    app: {{.ProjectName}}
---
apiVersion: v1
kind: Service
metadata:
  name: {{.ProjectName}}-loadbalancer
  labels:
    app: {{.ProjectName}}
  annotations:
    service.beta.kubernetes.io/aws-load-balancer-type: nlb
    service.beta.kubernetes.io/aws-load-balancer-cross-zone-load-balancing-enabled: 'true'
spec:
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 8080
    protocol: TCP
    name: http
  selector:
    app: {{.ProjectName}}
