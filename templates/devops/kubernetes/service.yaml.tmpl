apiVersion: v1
kind: Service
metadata:
  name: {{.ProjectName}}-service
  labels:
    app: {{.ProjectName}}
spec:
  type: ClusterIP
  ports:
  - port: 80
    targetPort: 8080
    protocol: TCP
    name: http
  selector:
    app: {{.ProjectName}}
