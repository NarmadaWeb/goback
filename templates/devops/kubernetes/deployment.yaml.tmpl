apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{.ProjectName}}
  labels:
    app: {{.ProjectName}}
    version: v1
spec:
  replicas: 3
  selector:
    matchLabels:
      app: {{.ProjectName}}
  template:
    metadata:
      labels:
        app: {{.ProjectName}}
        version: v1
    spec:
      containers:
      - name: {{.ProjectName}}
        image: {{.ProjectName}}:latest
        ports:
        - containerPort: 8080
          name: http
        env:
        - name: PORT
          value: "8080"
        - name: APP_ENV
          value: "production"
        {{- if .Database}}
        - name: DB_HOST
          valueFrom:
            secretKeyRef:
              name: {{.ProjectName}}-secrets
              key: db-host
        - name: DB_PORT
          valueFrom:
            secretKeyRef:
              name: {{.ProjectName}}-secrets
              key: db-port
        - name: DB_USERNAME
          valueFrom:
            secretKeyRef:
              name: {{.ProjectName}}-secrets
              key: db-username
        - name: DB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: {{.ProjectName}}-secrets
              key: db-password
        - name: DB_NAME
          valueFrom:
            secretKeyRef:
              name: {{.ProjectName}}-secrets
              key: db-name
        {{- end}}
        resources:
          requests:
            memory: "64Mi"
            cpu: "250m"
          limits:
            memory: "128Mi"
            cpu: "500m"
        livenessProbe:
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 5
        volumeMounts:
        - name: config
          mountPath: /app/config
          readOnly: true
      volumes:
      - name: config
        configMap:
          name: {{.ProjectName}}-config
      # If you are using a private Docker registry, you need to create a secret with the credentials
      # and add its name to the imagePullSecrets list.
      # Example: kubectl create secret docker-registry {{.ProjectName}}-registry-secret --docker-server=...
      imagePullSecrets:
      - name: {{.ProjectName}}-registry-secret
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{.ProjectName}}-config
data:
  app.yaml: |
    server:
      port: 8080
      host: 0.0.0.0
      read_timeout: 30
      write_timeout: 30
    app:
      name: {{.ProjectName}}
      version: 1.0.0
      environment: production
      debug: false
---
apiVersion: v1
kind: Secret
metadata:
  name: {{.ProjectName}}-secrets
type: Opaque
data:
  {{- if .Database}}
  # It is strongly recommended to change these placeholder values.
  # Use 'echo -n "your-value" | base64' to encode your actual values.
  db-host: Y2hhbmdlbWUtZGItaG9zdA==  # base64 encoded "changeme-db-host"
  db-port: {{if eq .Database "postgresql"}}NTQzMg==  # 5432{{else if eq .Database "mysql"}}MzMwNg==  # 3306{{else}}  # sqlite{{end}}
  db-username: Y2hhbmdlbWUtZGItdXNlcg== # base64 encoded "changeme-db-user"
  db-password: Y2hhbmdlbWUtZGItcGFzc3dvcmQ= # base64 encoded "changeme-db-password"
  db-name: {{printf "%s_db" .ProjectName | b64enc}}
  {{- end}}
