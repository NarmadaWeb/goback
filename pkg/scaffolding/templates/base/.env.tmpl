# Server Configuration
PORT=8080
GIN_MODE=debug
SERVER_READ_TIMEOUT=10
SERVER_WRITE_TIMEOUT=10
SERVER_IDLE_TIMEOUT=60
SERVER_MAX_HEADER_BYTES=1048576

# Database Configuration
{{- if eq .Database "postgresql"}}
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME={{.ProjectName | snakeCase}}
DB_SSLMODE=disable
{{- else if eq .Database "mysql"}}
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME={{.ProjectName | snakeCase}}
{{- else if eq .Database "sqlite"}}
DB_PATH=./{{.ProjectName | snakeCase}}.db
{{- end}}
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# JWT Configuration
JWT_SECRET=a-random-secret-for-development
JWT_EXPIRATION=24h

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@{{.ProjectName | kebabCase}}.com

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# External APIs (optional)
# API_KEY_EXAMPLE=your-api-key-here
# EXTERNAL_SERVICE_URL=https://api.example.com

# Monitoring & Observability (optional)
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Security
BCRYPT_COST=12
SESSION_SECRET=your-session-secret-change-in-production
CSRF_PROTECTION_ENABLED=true

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_PPROF=false
MOCK_EXTERNAL_SERVICES=false

# {{.ProjectName | title}} Specific Configuration

{{- if .DevOps.Enabled}}

# DevOps Configuration
{{- if .DevOps.Kubernetes}}
KUBERNETES_NAMESPACE={{.ProjectName | kebabCase}}
KUBERNETES_CONFIG_PATH=~/.kube/config
{{- end}}

{{- if .DevOps.Helm}}
HELM_RELEASE_NAME={{.ProjectName | kebabCase}}
HELM_CHART_VERSION=1.0.0
{{- end}}

{{- if .DevOps.Terraform}}
TF_VAR_environment=development
TF_VAR_project_name={{.ProjectName | kebabCase}}
TF_VAR_region=us-west-2
{{- end}}

{{- if .DevOps.Ansible}}
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_INVENTORY_PATH=./deployments/ansible/inventory
{{- end}}

{{- end}}
