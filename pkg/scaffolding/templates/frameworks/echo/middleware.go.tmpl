package middleware

import (
	"log"
	"time"

	"github.com/labstack/echo/v4"
)

func RequestLogger() echo.MiddlewareFunc {
	return func(next echo.HandlerFunc) echo.HandlerFunc {
		return func(c echo.Context) error {
			start := time.Now()

			err := next(c)

			stop := time.Now()

			reqID := c.Response().Header().Get(echo.HeaderXRequestID)

			log.Printf(
				"[%s] %s %s - %v %s",
				c.RealIP(),
				c.Request().Method,
				c.Request().URL.Path,
				stop.Sub(start),
				reqID,
			)
			return err
		}
	}
}