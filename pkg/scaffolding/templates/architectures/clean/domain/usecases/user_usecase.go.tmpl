// GetAllUsers use case for retrieving all users with pagination
func (uc *UserUsecase) GetAllUsers(ctx context.Context, page, perPage int) ([]*entities.User, int64, error) {
	// Apply business rules for pagination
	if page <= 0 {
		page = 1
	}
	if perPage <= 0 {
		perPage = 10
	}
	if perPage > 100 {
		perPage = 100
	}

	users, total, err := uc.userRepo.FindAll(ctx, page, perPage)
	if err != nil {
	    return nil, 0, err
	}
	
	// Convert []entities.User to []*entities.User
	result := make([]*entities.User, len(users))
	for i := range users {
	    result[i] = &users[i]
	}
	
	return result, total, nil
}

// UpdateUser use case for updating user information
{{- if eq .Database "postgresql" }}
func (uc *UserUsecase) UpdateUser(ctx context.Context, id uuid.UUID, dto entities.UpdateUserDTO) (*entities.User, error) {
{{- else}}
func (uc *UserUsecase) UpdateUser(ctx context.Context, id entities.UserID, dto entities.UpdateUserDTO) (*entities.User, error) {
{{- end}}
	// Get existing user
	user, err := uc.userRepo.FindByID(ctx, id)
	if err != nil {
		return nil, err
	}
	if user == nil {
		return nil, errors.New("user not found")
	}

	// Update name if provided
	if dto.Name != nil {
		if err := user.UpdateName(*dto.Name); err != nil {
			return nil, err
		}
	}

	// Update email if provided and different
	if dto.Email != nil && *dto.Email != user.Email {
		// Check if new email is already taken
		exists, err := uc.userRepo.ExistsByEmail(ctx, *dto.Email)
		if err != nil {
			return nil, err
		}
		if exists {
			return nil, errors.New("email already taken")
		}

		if err := user.UpdateEmail(*dto.Email); err != nil {
			return nil, err
		}
	}

	// Update password if provided
	if dto.Password != nil {
		if err := user.UpdatePassword(*dto.Password); err != nil {
			return nil, err
		}
	}

	// Update active status if provided
	if dto.IsActive != nil {
		if *dto.IsActive {
			user.Activate()
		} else {
			user.Deactivate()
		}
	}

	// Save updated user
	if err := uc.userRepo.Save(ctx, user); err != nil {
		return nil, err
	}

	// Return updated user
	return uc.userRepo.FindByID(ctx, id)
}

// DeleteUser use case for deleting a user
{{- if eq .Database "postgresql" }}
func (uc *UserUsecase) DeleteUser(ctx context.Context, id uuid.UUID) error {
{{- else}}
func (uc *UserUsecase) DeleteUser(ctx context.Context, id entities.UserID) error {
{{- end}}
	// Check if user exists
	user, err := uc.userRepo.FindByID(ctx, id)
	if err != nil {
		return err
	}
	if user == nil {
		return errors.New("user not found")
	}

	// Business rule: Deactivate user before deletion
	if user.IsActive {
		user.Deactivate()
		if err := uc.userRepo.Save(ctx, user); err != nil {
			return err
		}
	}

	return uc.userRepo.Delete(ctx, id)
}

