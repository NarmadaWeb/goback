{{- if eq .Database "postgresql" }}
CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
{{- end}}

CREATE TABLE IF NOT EXISTS users (
    id {{if eq .Database "postgresql"}}UUID PRIMARY KEY DEFAULT uuid_generate_v4(){{else}}INTEGER PRIMARY KEY AUTOINCREMENT{{end}},
    name VARCHAR(255) NOT NULL,
    email VARCHAR(255) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    active BOOLEAN DEFAULT TRUE, -- Consistent column name: 'active'
    created_at TIMESTAMP WITH TIME ZONE DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT CURRENT_TIMESTAMP
);

{{- if eq .Database "postgresql" }}
-- Trigger for updated_at in PostgreSQL
CREATE OR REPLACE FUNCTION update_updated_at_column()
RETURNS TRIGGER AS $$
BEGIN
    NEW.updated_at = NOW();
    RETURN NEW;
END;
$$ language 'plpgsql';

CREATE TRIGGER update_users_updated_at
BEFORE UPDATE ON users
FOR EACH ROW
EXECUTE FUNCTION update_updated_at_column();
{{- end}}