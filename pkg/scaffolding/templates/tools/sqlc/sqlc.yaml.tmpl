version: "2"
sql:
- schema: "db/migrations" # Path to migrations folder
  queries: "db/queries"  # Path to queries folder
  engine: "{{.Database}}"
  gen:
    go:
      package: "db"
      out: "db/sqlc"
      {{- if eq .Database "postgresql"}}
      sql_package: "pgx/v5"
      overrides:
        - db_type: "uuid"
          go_type: "github.com/google/uuid.UUID"
        - db_type: "boolean"
          go_type: "bool"
        - db_type: "timestamp"
          go_type: "time.Time"
        - db_type: "timestamptz"
          go_type: "time.Time"
        - db_type: "date"
          go_type: "time.Time"
      {{- else if eq .Database "mysql"}}
      sql_package: "database/sql"
      {{- else if eq .Database "sqlite"}}
      sql_package: "database/sql"
      {{- else}}
      sql_package: "database/sql"
      {{- end}}
      emit_json_tags: true
      emit_prepared_queries: false
      emit_interface: true
      emit_exact_table_names: false
      emit_empty_slices: true